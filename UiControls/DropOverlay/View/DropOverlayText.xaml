<UserControl x:Class="UiControls.DropOverlay.View.DropOverlayText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:UiControls.DropOverlay.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModel:TextDropZoneViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             Width="{Binding Width}"
             Height="{Binding Height}">
        <Border Background="{Binding BackgroundBrush}"
                BorderBrush="{Binding BorderBrush}"
                CornerRadius="{Binding CornerRadius}">
            <TextBlock Text="{Binding Text}"
                       Foreground="{Binding ForegroundBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
</UserControl>
