<UserControl x:Class="UiControlsExamples.ColoredCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UiControlsExamples"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:ColoredCellViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Border Background="{Binding Brush}">
        <TextBlock Text="{Binding Brush}" />
    </Border>
</UserControl>
