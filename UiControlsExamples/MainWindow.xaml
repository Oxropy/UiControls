<Window x:Class="UiControlsExamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dynamicGrid="clr-namespace:UiControls.DynamicGrid;assembly=UiControls"
        xmlns:uiControlsExamples="clr-namespace:UiControlsExamples"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance uiControlsExamples:MainWindowViewModel}"
        Title="MainWindow"
        Height="450"
        Width="800">
    <dynamicGrid:DynamicGrid Name="DynamicGrid"
                             MinRows="{Binding DynamicGridManager.MinRows}"
                             MaxRows="{Binding DynamicGridManager.MaxRows}"
                             MinColumns="{Binding DynamicGridManager.MinColumns}"
                             MaxColumns="{Binding DynamicGridManager.MaxColumns}" />
</Window>