<Window x:Class="UiControlsExamples.DragOverlay.DragOverlayShowcase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:UiControls.DropOverlay.View;assembly=UiControls"
        Title="Drag Drop Demo" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Source TreeView -->
        <TreeView x:Name="SourceTreeView" Grid.Column="0" Margin="5">
            <TreeViewItem Header="Item 1" Tag="1"/>
            <TreeViewItem Header="Item 2" Tag="2"/>
            <TreeViewItem Header="Item 3" Tag="3"/>
        </TreeView>

        <!-- Target Grid -->
        <Grid x:Name="TargetGrid" Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Background="LightGray" Margin="2">
                <TextBlock Text="Drop Zone 1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Background="LightGray" Margin="2">
                <TextBlock Text="Drop Zone 2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="0" Background="LightGray" Margin="2">
                <TextBlock Text="Drop Zone 3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="1" Background="LightGray" Margin="2">
                <TextBlock Text="Drop Zone 4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>
        
        <view:DropOverlayControl Grid.Column="1" x:Name="DropOverlay"
                                        Width="{Binding ActualWidth, ElementName=TargetGrid}"
                                        Height="{Binding ActualHeight, ElementName=TargetGrid}"
                                        IsHitTestVisible="False">
            <view:DropOverlayControl.Templates>
                <view:DropOverlayTemplate Position="Top">
                    <Image Source="/DragOverlay/Images/add_above.png" Height="20" Width="20"/>
                </view:DropOverlayTemplate>
                <view:DropOverlayTemplate Position="Right">
                    <Image Source="/DragOverlay/Images/add_above.png" Height="20" Width="20">
                        <Image.LayoutTransform>
                            <RotateTransform Angle="90"/>
                        </Image.LayoutTransform>
                    </Image>
                </view:DropOverlayTemplate>
                <view:DropOverlayTemplate Position="Bottom">
                    <Image Source="/DragOverlay/Images/add_above.png" Height="20" Width="20">
                        <Image.LayoutTransform>
                            <RotateTransform Angle="180"/>
                        </Image.LayoutTransform>
                    </Image>
                </view:DropOverlayTemplate>
                <view:DropOverlayTemplate Position="Left">
                    <Image Source="/DragOverlay/Images/add_above.png" Height="20" Width="20">
                        <Image.LayoutTransform>
                            <RotateTransform Angle="270"/>
                        </Image.LayoutTransform>
                    </Image>
                </view:DropOverlayTemplate>
                <view:DropOverlayTemplate Position="Center">
                    <Border Background="#80FF00FF" CornerRadius="5">
                        <TextBlock Text="Drop Here" HorizontalAlignment="Center"/>
                    </Border>
                </view:DropOverlayTemplate>
            </view:DropOverlayControl.Templates>
        </view:DropOverlayControl>
    </Grid>
</Window>

